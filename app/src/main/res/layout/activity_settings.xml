<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/cb_use_sockets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="105dp"
        android:text="Usar Sockets"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Host"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/cb_use_sockets"
        app:layout_constraintTop_toBottomOf="@+id/cb_use_sockets" />

    <EditText
        android:id="@+id/edt_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Porta"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/edt_host"
        app:layout_constraintTop_toBottomOf="@+id/edt_host" />

    <Button
        android:id="@+id/btn_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:onClick="onClick"
        android:text="Voltar"
        app:layout_constraintStart_toStartOf="@+id/edt_port"
        app:layout_constraintTop_toBottomOf="@+id/edt_port" />

</androidx.constraintlayout.widget.ConstraintLayout>